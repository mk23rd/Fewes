# Comma-separated list of origins allowed to call the API.
ALLOWED_ORIGINS=http://localhost:5000,http://localhost:5173

# Firestore collection name for orders.
ORDERS_COLLECTION=orders

# Default region where the HTTPS function is deployed.
FUNCTION_REGION=us-central1

# Chapa payments (set the secret key from your Chapa dashboard).
CHAPA_SECRET_KEY=
CHAPA_CURRENCY=ETB

# Optional webhook + return URLs for hosted checkout flows.
# CHAPA_CALLBACK_URL=https://your-domain.tld/api/payments/chapa/callback
# CHAPA_RETURN_URL=https://your-domain.tld/Profile/index.html
